@{
    Layout = null;
}

@model VMMDoctor

<form id="EditSpecialization" method="post" asp-controller="Doctor" asp-action="specialization">
    <input type="hidden" name="Id" value="@Model.Id"></input>
    <input type="hidden" name="ModifiedBy" value="@Model.Id"></input>
    <div class="card">
        <div class="card-header h3">Pilih Spesialisasi</div>
        <div class="card-body">            
            <div class="row">
                <label class="form-label">Spesialisasi</label>
                @*<input class="form-control" type="text" name="CategoryId"></input>*@
                <select class="form-control" name="Str">
                    <option value="">--Select Category--</option>
                    @foreach (VMMSpecialization specialization in ViewBag.category)
                    {
                        if (specialization.Name == Model.Str)
                        {
                            <option value="@specialization.Name" selected>@specialization.Name</option>
                        }
                        else
                        {
                            <option value="@specialization.Name">@specialization.Name</option>
                        }
                    }
                </select>
            </div>
        </div>
        <div class="card-footer">
            <div class="d-flex justify-content-between">
                &nbsp;
                <button type="submit" class="btn btn-success float-end"><i class="fas fa-save"></i> Save</button>
            </div>
        </div>
    </div>
</form>
