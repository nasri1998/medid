@{
    Layout = null;
}
@model VMUser
<div class="auth-form-light text-left px-sm-4">
    <h4>Selamat Datang</h4>
    <h6 class="font-weight-light">Silahkan masuk untuk melanjutkan</h6>
    <form class="pt-3" id="frmLogin" method="post" asp-action="LoginVerification" asp-controller="Login">
        <div class="form-group">
            <input type="email" class="form-control form-control-sm" name="Email" placeholder="Name">
        </div>
        <div class="form-group">
            <input type="password" class="form-control form-control-sm" name="Password" placeholder="Password">
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-block btn-primary font-weight-medium auth-form-btn">Masuk</button>
        </div>
        <div class="mt-1 mb-4 d-flex">
            <a href="#" class="auth-link text-black">Lupa password?</a>
        </div>
        <div class="text-center font-weight-light">
            Tidak punya akun? <a class="text-primary" href="/Login/SignIn">Daftar</a>
        </div>

    </form>
</div>
<script>
    $("#frmLogin").validate({

        submitHandler: function (form) {
            alert("tes");

            $.ajax({
                url: "Login/LoginVerification",
                type: "Get",
                data: $(form).serialize(), //data teks
                dataType: "json", //diubah ke json
                beforeSend: function () {
                    //proses sebelum memanggil controller
                },
                success: function (data) {
                    //debugger;
                    if (data.success === true) {
                        alert("Succes Masuk");
                        window.location.href = data.redirectToUrl;
                    }
                    else
                    {
                        alert("Gagal masuk");
                        location.reload();
                    }

                    //if (apiResponse.success) { location.reload(); alert(apiResponse.message); }
                    //else { alert(apiResponse.message); location.reload(); } //menjadi huruf kecil semua

                }, //proses setelah memanggil kontroler
                error: function (data) {
                    //debugger;
                    alert("Error prosses!");
                    location.reload()
                    //  $("#myModalLg").modal("hide");
                } //proses ketika terjadi kesalahan
            });
        }
    });

</script>

